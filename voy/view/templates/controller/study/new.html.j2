{% extends 'layout-page.html.j2' %}


{% from "components/section.html.j2" import render_section %}
{% from "components/content.html.j2" import render_content %}

{% from "utilities/_errors.html.j2" import render_errors %}


{#############################################################################}
{# META                                                                      #}
{#############################################################################}

{% block title %}Add Study{% endblock %}

{% block page_title %}Studies{% endblock %}


{#############################################################################}
{# CONTENT                                                                   #}
{#############################################################################}

{% block content %}

  {% with %}

    {% call render_section(
      title='New Study',
      sub_title='Got a new Study you are working on?') %}
      {% call render_content() %}
        <form action="{{ url_for('study_controller.new_post') }}" method="POST">

          {{ render_errors(errors) }}

          <div class="field mb-5">
            <label class="label">
              Study Identifier
            </label>
            <div class="control">
              <input type="number" class="input is-medium" name="internal_id" autofocus required />
            </div>
          </div>

          <div class="field mb-5">
            <div class="control">
              <button class="button is-primary is-medium">Add Study</button>
            </div>
          </div>

        </form>
      {% endcall %}
    {% endcall %}

  {% endwith %}

{% endblock %}


{#############################################################################}
{# MACROS                                                                    #}
{#############################################################################}
