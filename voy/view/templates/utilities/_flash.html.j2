{% with messages = get_flashed_messages(with_categories=true) %}
  {% for category, message in messages %}
    <div
      class="notification is-{{ category }} mb-2"
      x-data="{ isShowing: true }"
      x-show="isShowing"
      x-transition>

      {{ message }}

      <button class="delete" @click="isShowing = false"></button>

    </div>
  {% endfor %}
{% endwith %}
