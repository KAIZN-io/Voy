<!-- templates/login.html -->

{% extends 'layout.html.j2' %}

{% block title %}
Login
{% endblock %}

{% block content %}
<div class="column is-4 is-offset-4">
  <h3 class="title">Login</h3>
  <div class="box">
    <form action="{{ url_for('authentication_controller.login_post') }}" method="POST">
      <div class="field">
        <div class="control">
          <input autofocus class="input is-large" name="user_abbreviation" placeholder="Your Abbreviation" required
                 type="text">
        </div>
      </div>
      <div class="field">
        <div class="control">
          <input class="input is-large" name="user_password" placeholder="Your Password" required type="password">
        </div>
      </div>
      <br>
      <button class="btn btn-primary">Login</button>
      <a href="{{ url_for('profile_controller.request_password_reset') }}">forgot my password</a>
    </form>
  </div>
</div>
{% endblock %}
